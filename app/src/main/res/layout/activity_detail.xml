<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical">

    <LinearLayout
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:padding="7dp"
            android:background="@drawable/button_bg"
            android:id="@+id/detail_back_button"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_button"
            android:layout_marginEnd="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:padding="7dp"
            android:background="@drawable/button_bg"
            android:id="@+id/detail_save_button"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/save_button"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:padding="7dp"
            android:background="@drawable/button_bg"
            android:id="@+id/detail_share_button"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/share_button"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/detail_pg"
                android:indeterminateTint="@color/link_green"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/detail_not_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Not Found!"/>

            <TextView
                android:id="@+id/detail_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="24sp"
                android:textColor="@color/link_green"/>
            <TextView
                android:id="@+id/detail_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selasa, 13 Mei 2025"
                android:layout_marginBottom="10dp"/>
            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                android:layout_marginBottom="10dp"
                android:src="@drawable/_553039945540_screenshot_2019_03_20_09_24_22_resized"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"/>

            <WebView
                android:id="@+id/detail_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"/>
        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>